<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="client.screens.GameOverScreen"
            xmlns:fx="http://javafx.com/fxml"
            padding="20">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label fx:id="titleLabel" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
            <Label fx:id="winnerLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <TableView fx:id="scoresTable" prefWidth="400" columnResizePolicy="CONSTRAINED_RESIZE_POLICY">
                <columns>
                    <TableColumn fx:id="nameCol" text="Игрок"/>
                    <TableColumn fx:id="winsCol" text="Побед"/>
                </columns>
            </TableView>

            <Button fx:id="returnButton" text="Вернуться в главное меню"
                    style="-fx-font-size: 16px; -fx-padding: 10px 20px;"
                    onAction="#onReturnClicked"/>
        </VBox>
    </center>

</BorderPane>
